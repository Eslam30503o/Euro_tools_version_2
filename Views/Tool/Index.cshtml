@model IEnumerable<WarehouseApp.Models.Item>
    @{
    ViewData["Title"] = "Tools List";
    }
    <h1>Tools List</h1>
    <a asp-controller="Tool" asp-action="Create" class="btn btn-primary mb-3">Add New Tool</a>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Item Code</th>
                <th>Item Name</th>
                <th>Category</th>
                <th>Diameter</th>
                <th>Length</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var tool in Model)
        {
            <tr>
                <td>@tool.ItemCode</td>
                <td>@tool.ItemName</td>
                <td>@tool.Category?.CategoryName</td>
                <td>@tool.ToolAttribute?.Diameter</td>
                <td>@tool.ToolAttribute?.Length</td>
                <td>
                    <a asp-controller="Tool" asp-action="Details" asp-route-id="@tool.ItemID" class="btn btn-info btn-sm">Details</a>
                    <a asp-controller="Tool" asp-action="Edit" asp-route-id="@tool.ItemID" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-controller="Tool" asp-action="Delete" asp-route-id="@tool.ItemID" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
