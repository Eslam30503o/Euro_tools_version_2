@model WarehouseApp.Models.Item
@{
    ViewData["Title"] = "تفاصيل الأداة";
}

<h2>@ViewData["Title"]</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">كود الأداة</dt>
        <dd class="col-sm-10">@Model.ItemCode</dd>

        <dt class="col-sm-2">اسم الأداة</dt>
        <dd class="col-sm-10">@Model.ItemName</dd>

        <dt class="col-sm-2">الوصف</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">التصنيف</dt>
        <dd class="col-sm-10">@Model.Category?.CategoryName</dd>

        <dt class="col-sm-2">الوحدة</dt>
        <dd class="col-sm-10">@Model.Unit</dd>

        <dt class="col-sm-2">المخزون الحالي</dt>
        <dd class="col-sm-10">@Model.CurrentStock</dd>

        <dt class="col-sm-2">تاريخ الإضافة</dt>
        <dd class="col-sm-10">@Model.CreatedAt</dd>
    </dl>
</div>

<a asp-action="Edit" asp-route-id="@Model.ItemID" class="btn btn-primary">تعديل</a>
<a asp-action="Index" class="btn btn-secondary">رجوع</a>
