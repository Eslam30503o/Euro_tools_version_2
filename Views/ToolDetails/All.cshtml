@model IEnumerable<WarehouseApp.Models.Item>

    @{
    ViewData["Title"] = "All Tools";
    }

    <h2 class="mb-4">🧰 جميع الأدوات</h2>

    <a asp-controller="AddItem" asp-action="Index" class="btn btn-success mb-3">➕ إضافة أداة جديدة</a>

    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>الكود</th>
                <th>الاسم</th>
                <th>الوصف</th>
                <th>الكمية</th>
                <th>الوحدة</th>
                <th>الفئة</th>
                <th>الإجراءات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
        {
            <tr>
                <td>@item.ItemCode</td>
                <td>@item.ItemName</td>
                <td>@item.Description</td>
                <td>@item.CurrentStock</td>
                <td>@item.Unit</td>
                <td>@item.Category?.CategoryName</td>
                <td>
                    <a asp-controller="ToolDetails" asp-action="Index" asp-route-id="@item.ItemID" class="btn btn-info btn-sm">عرض</a>
                    <a asp-controller="Tool" asp-action="Edit" asp-route-id="@item.ItemID" class="btn btn-warning btn-sm">تعديل</a>
                    <a asp-controller="Tool" asp-action="Delete" asp-route-id="@item.ItemID" class="btn btn-danger btn-sm">حذف</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
