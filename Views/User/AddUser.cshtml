@model WarehouseApp.Models.User
@{
    ViewData["Title"] = "إضافة مستخدم جديد";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h2 class="text-center mb-0">إضافة مستخدم جديد</h2>
                </div>
                <div class="card-body">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i>
                            @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form asp-action="AddUser" method="post" id="addUserForm">
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>
                        
                        <div class="mb-3">
                            <label asp-for="Username" class="form-label">
                                <i class="fas fa-user me-2"></i>اسم المستخدم
                            </label>
                            <input asp-for="Username" type="text" class="form-control" placeholder="أدخل اسم المستخدم" required />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">
                                <i class="fas fa-lock me-2"></i>كلمة السر
                            </label>
                            <div class="input-group">
                                <input asp-for="Password" type="password" class="form-control" id="passwordInput" placeholder="أدخل كلمة السر" required />
                                <button class="btn btn-outline-secondary" type="button" id="togglePassword">
                                    <i class="fas fa-eye" id="toggleIcon"></i>
                                </button>
                            </div>
                            <span asp-validation-for="Password" class="text-danger"></span>
                            <div class="form-text">كلمة السر يجب أن تحتوي على الأقل 6 أحرف</div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Role" class="form-label">
                                <i class="fas fa-user-tag me-2"></i>الدور
                            </label>
                            <select asp-for="Role" class="form-select" required>
                                <option value="">اختر الدور</option>
                                <option value="Admin">مدير النظام</option>
                                <option value="Manager">مدير</option>
                                <option value="Supervisor">مشرف</option>
                                <option value="User">مستخدم</option>
                            </select>
                            <span asp-validation-for="Role" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-plus me-2"></i>إضافة مستخدم
                            </button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">
                        <i class="fas fa-arrow-right me-2"></i>الرجوع إلى الصفحة الرئيسية
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Toggle password visibility
    const togglePassword = document.getElementById('togglePassword');
    const passwordInput = document.getElementById('passwordInput');
    const toggleIcon = document.getElementById('toggleIcon');

    if (togglePassword) {
        togglePassword.addEventListener('click', function() {
            const type = passwordInput.type === 'password' ? 'text' : 'password';
            passwordInput.type = type;
            
            if (type === 'password') {
                toggleIcon.className = 'fas fa-eye';
            } else {
                toggleIcon.className = 'fas fa-eye-slash';
            }
        });
    }

    // Form validation
    const form = document.getElementById('addUserForm');
    if (form) {
        form.addEventListener('submit', function(e) {
            const username = document.getElementById('Username').value.trim();
            const password = document.getElementById('Password').value;
            const role = document.getElementById('Role').value;

            if (username.length < 3) {
                e.preventDefault();
                alert('اسم المستخدم يجب أن يحتوي على الأقل 3 أحرف');
                return;
            }

            if (password.length < 6) {
                e.preventDefault();
                alert('كلمة السر يجب أن تحتوي على الأقل 6 أحرف');
                return;
            }

            if (!role) {
                e.preventDefault();
                alert('يرجى اختيار الدور');
                return;
            }
        });
    }
});
</script>

<style>
.card {
    box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
    border: 1px solid rgba(0, 0, 0, 0.125);
}

.form-label {
    font-weight: 600;
    color: #495057;
}

.btn-primary {
    background-color: #007bff;
    border-color: #007bff;
}

.btn-primary:hover {
    background-color: #0056b3;
    border-color: #004085;
}

.alert {
    border-radius: 0.375rem;
}

.input-group .btn {
    border-left: none;
}

.form-text {
    font-size: 0.875rem;
    color: #6c757d;
}
</style>